<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Vulnerable App</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <nav class="navbar">
            <h1>Admin Panel</h1>
            <div class="nav-links">
                <a href="/dashboard">Dashboard</a>
                <a href="/posts">All Posts</a>
                <a href="/logout">Logout</a>
            </div>
        </nav>

        <div class="admin-content">
            <h2>User Management</h2>
            <div class="users-table">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Password (Plaintext)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.id %></td>
                                <td><%= user.username %></td>
                                <td><%= user.email %></td>
                                <td><%= user.role %></td>
                                <td><%= user.password %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            
        </div>
    </div>
</body>
</html>
