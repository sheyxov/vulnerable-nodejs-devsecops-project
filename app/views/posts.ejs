<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Posts - Vulnerable App</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <nav class="navbar">
            <h1>All Posts</h1>
            <div class="nav-links">
                <a href="/dashboard">Dashboard</a>
                <% if (user && user.role === 'admin') { %>
                    <a href="/admin">Admin Panel</a>
                <% } %>
                <% if (user) { %>
                    <a href="/logout">Logout</a>
                <% } else { %>
                    <a href="/login">Login</a>
                <% } %>
            </div>
        </nav>

        <div class="posts-container">
            <% if (posts.length === 0) { %>
                <p>No posts available.</p>
            <% } else { %>
                <% posts.forEach(post => { %>
                    <div class="post">
                        <h2><%- post.title %></h2>
                        <div class="post-content"><%- post.content %></div>
                        <div class="post-meta">
                            <small>By: <strong><%= post.username %></strong> | <%= post.created_at %></small>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</body>
</html>
